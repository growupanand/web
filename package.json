{
  "name": "@shabados/web",
  "description": "App for Shabad OS",
  "engines": {
    "node": ">=15.0.0"
  },
  "private": true,
  "scripts": {
    "build": "qwik build",
    "build.client": "vite build",
    "build.preview": "vite build --ssr src/entry.preview.tsx",
    "build.server": "vite build -c adapters/firebase/vite.config.ts",
    "build.types": "tsc --incremental --noEmit",
    "deploy": "firebase deploy",
    "dev": "vite --mode ssr",
    "dev.debug": "node --inspect-brk ./node_modules/vite/bin/vite.js --mode ssr --force",
    "fmt": "prettier --write .",
    "fmt.check": "prettier --check .",
    "lint": "eslint \"src/**/*.ts*\"",
    "preview": "qwik build preview && vite preview --open",
    "serve": "qwik build && firebase emulators:start",
    "start": "vite --open --mode ssr",
    "start.external": "vite --open --mode ssr --host",
    "qwik": "qwik"
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true
  },
  "devDependencies": {
    "@builder.io/qwik": "^1.1.0",
    "@builder.io/qwik-city": "^1.1.0",
    "@types/eslint": "^8.37.0",
    "@types/node": "^20.1.2",
    "@types/node-fetch": "^2.6.3",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.40.0",
    "eslint-plugin-qwik": "^1.1.0",
    "firebase-tools": "^12.6.2",
    "node-fetch": "^3.3.1",
    "prettier": "^3.0.3",
    "typescript": "^5.0.4",
    "undici": "^5.22.0",
    "vite": "^4.3.5",
    "vite-tsconfig-paths": "^4.2.0"
  },
  "dependencies": {
    "firebase": "^10.6.0"
  }
}
